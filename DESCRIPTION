Type: Package
Package: gigs
Title: Assess Growth in Infants and Newborns
Version: 0.1.2
Date: 2023-07-20
Authors@R: c(
    person(given = "Simon", family = "Parker",
           email = "simon.parker@lshtm.ac.uk",
           role = c("aut", "cre"), comment = c(ORCID = "0009-0003-8214-4496")),
